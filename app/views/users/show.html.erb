<div class="text-center mt-2">
  <h2><%= @user.name %></h2>

  <%= image_tag user_avatar(@user) %>

  <% if @user == current_user %>
    <p class="mt-3">
      <%= link_to "Редактировать профиль", edit_user_path(@user),
        class: 'btn btn-primary btn-sm' %>
    </p>
  <% end %>

  <div class="row">
    <div class="col-md-12">
      <% if @user.events.any? %>
        <h3 class="mt-4 mb-3">Организовал</h3>
        <div class="row justify-content-around">
          <%= render partial: 'events/event', collection: @user.events %>
        </div>
      <% else %>
        <p class="bg-light border lead my-4 py-2">
          Пользователь пока не организовал ни одного события :(
        </p>
      <% end %>
    </div>
  </div>
</div>
