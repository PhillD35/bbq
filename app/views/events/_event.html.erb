<div class="col-sm-6 col-md-4 my-2">
  <div class="thumbnail">
    <%= content_tag 'div', '', class: 'event-background',
      style: "background-image: url(#{asset_pack_path('media/images/event_thumb.jpg')})" %>

    <div class="thumbnail-inner event-info-inner">
      <div class="caption">
        <div class="event-description">
          <h3 class="mx-3"><%= link_to event.title, event_path(event), class: '' %></h3>
          <h5 class="mx-3"><small><%= event.datetime %></small></h5>
          <div class="buffer-both mx-3"><%= event.address %></div>
        </div>
      </div>
    </div>
  </div>
</div>
