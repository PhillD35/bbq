<div class="row">
  <div class="col-md-6">
    <h2 class="mt-1 mb-4">Регистрация</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group my-3">
        <%= f.label :email, class: 'h6' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
      </div>

      <div class="form-group my-3">
        <%= f.label :name, class: 'h6' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div class="form-group my-3">
        <%= f.label :password, class: 'h6' %>
        <% if @minimum_password_length %>
          <em class="text-secondary">(<%= @minimum_password_length %> символа минимум)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
      </div>

      <div class="form-group my-3">
        <%= f.label :password_confirmation, class: 'h6' %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
      </div>

      <div class="actions mt-4 d-flex justify-content-between align-items-baseline">
        <%= f.submit "Зарегаться!", class: 'btn btn-primary' %>
        <%= link_to 'Вернуться', :back, class: 'btn btn-outline-dark btn-sm'%>
      </div>
    <% end %>
  </div>

  <div class="align-self-center card d-sm-none d-md-block mx-auto shadow-lg rounded">
    <ui class="list-group list-group-flush">
      <li class="list-group-item text-center shadow">
        <p class="lead">Уже зарегестрирован?</p>
        <%= link_to 'Войди!', new_user_session_path, class: 'btn btn-outline-info stretched-link'%>
      </li>
    </ui>
  </div>
</div>
