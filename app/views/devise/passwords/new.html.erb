<div class="col-lg-4 col-md-6">
  <h2 class="mt-1 mb-4">Забыл пароль?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group">
      <%= f.label :email, class: 'h6' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email",
        class: 'form-control', placeholder: t('placeholder.email') %>
    </div>

    <div class="actions mt-4 d-flex justify-content-between align-items-baseline">
      <%= f.submit t('button.recover_password'), class: 'btn btn-info' %>
      <%= link_to t('link.back'), :back, class: 'btn btn-outline-dark btn-sm'%>
    </div>
  <% end %>
</div>
